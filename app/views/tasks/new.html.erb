<h1>New Task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control w-50' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control w-50' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

